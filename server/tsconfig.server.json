{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "baseUrl": ".",
    "module": "commonjs",
    "types": [
      "node"
    ],
    "paths": {
      "@app/*": ["../public/src/app/*"],
      "@shared/*": ["../shared/*"],
      "@server/*": ["*"]
    }
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    "test.ts",
    "**/*.spec.ts"
  ]
}
