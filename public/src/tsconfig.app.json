  "include": [
    "./**/*",
    "../../node_modules/ngx-quill-editor/quillEditor.component.ts",
    "../../node_modules/ngx-quill-editor/quillEditor.module.ts",
    "../../node_modules/ngx-quill-editor/index.ts"
  ],
  "exclude": [
    "test.ts",
    "**/*.spec.ts"
  ]
}
