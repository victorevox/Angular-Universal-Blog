{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../out-tsc/app",
    "baseUrl": "./",
    // "module": "es2015",
    "module": "commonjs",
    "types": [
      "node"
    ],
    "traceResolution": true,
    "paths": {
      "@app/*": [
        "app/*"
      ],
      "@shared/*": [
        "../../shared/*"
      ]
    }
